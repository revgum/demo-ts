{
  "name": "backend-ts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile": "tsc",
    "ci": "tsc --noEmit && npm run lint",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "dev": "npm run knex -- migrate:latest && tsx watch -r ./src/instrumentation.ts ./src/main.ts",
    "start": "tsx -r ./src/instrumentation.ts src/main.ts",
    "debug": "tsx -r ./src/instrumentation.ts --inspect-brk=0.0.0.0 src/main.ts",
    "knex": "tsx ./node_modules/knex/bin/cli.js --knexfile ./src/db/knexfile.ts"
  },
  "dependencies": {
    "@dapr/dapr": "^3.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.56.1",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.57.2",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.57.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.57.2",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.30.0",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-zod-api": "^22.13.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.19.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.1",
    "@types/http-errors": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.0",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.31.0"
  }
}
