{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": ["node"],
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "build",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
