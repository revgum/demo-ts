{
  "name": "<%= name %>",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile": "tsc",
    "ci": "biome ci",
    "dev": "tsx -r ./src/instrumentation.ts --watch src/main.ts",
    "start": "tsx -r ./src/instrumentation.ts src/main.ts",
    "start:localhost": "LOCALHOST=1 DAPR_PORT=3500 dapr run --app-id <%= name %> --app-port 3001 --dapr-http-port 3500 --scheduler-host-address '' -- npm run dev",
    "debug": "tsx -r ./src/instrumentation.ts --inspect-brk=0.0.0.0 src/main.ts",
    "debug:localhost": "LOCALHOST=1 DAPR_PORT=3500 dapr run --app-id <%= name %> --app-port 3001 --dapr-http-port 3500 --scheduler-host-address '' -- npm run debug",
    "knex": "tsx ./node_modules/knex/bin/cli.js --knexfile ./src/db/knexfile.ts"
  },
  "dependencies": {
    "@dapr/dapr": "^3.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.56.1",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.57.2",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.57.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.57.2",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.30.0",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-zod-api": "^22.13.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.19.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.1",
    "@types/http-errors": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.0",
    "@types/swagger-ui-express": "^4.1.8",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
